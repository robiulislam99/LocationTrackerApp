<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="@color/primary_color"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Tracker"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your journey in real-time"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Service Controls Card with Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_menu_compass"
                        app:tint="@color/primary_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tracking Service"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <!-- Status Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/status_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/presence_online"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvLocationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Locations: 0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

                <!-- Start Button with Icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartService"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Start Tracking"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/success_color"
                    android:elevation="4dp"/>

                <!-- Stop Button with Icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopService"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Stop Tracking"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@android:drawable/ic_media_pause"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/error_color"
                    android:layout_marginTop="12dp"
                    android:elevation="4dp"
                    app:strokeColor="@color/error_color"
                    app:strokeWidth="2dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- API Integration Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/stat_sys_download"
                        app:tint="@color/info_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="API Integration"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <!-- Fetch Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFetchApi"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Fetch Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@android:drawable/stat_sys_download_done"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/info_color"
                    android:elevation="4dp"/>

                <!-- API Data Display with Gradient Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/data_display_background"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:minHeight="120dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Response Data"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvApiData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="API data will appear here..."
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="6"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Location History Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@color/warning_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Location History"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <!-- Refresh Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewLocations"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Refresh History"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@android:drawable/ic_popup_sync"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/warning_color"
                    android:elevation="4dp"/>

                <!-- RecyclerView with Custom Background -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:scrollbars="vertical"
                        android:clipToPadding="false"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"/>

                    <!-- Empty State Message -->
                    <TextView
                        android:id="@+id/tvEmptyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="No locations yet\nStart tracking to see data"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:visibility="gone"/>

                </FrameLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Powered by Google Location Services"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>